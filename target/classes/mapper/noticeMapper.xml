<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="dao.BoardDAO">
    <!-- 공지사항 목록 조회 -->
    <select id="getFixedNotices" resultType="dto.BoardDTO">
        SELECT * FROM post_board WHERE boardId IN (SELECT boardId FROM post_notice) ORDER BY createTime DESC
    </select>

    <!-- 공지사항 등록 -->
    <insert id="insertNotice" parameterType="int">
        INSERT INTO post_notice (boardId, isNotice) VALUES (#{boardId}, 1)
    </insert> 
</mapper>