<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.UserDAO">

    <!-- 회원가입 -->
    <insert id="registerUser" parameterType="dto.UserDTO">
        INSERT INTO user (userId, password, name, phoneNumber, gender, address, email, emailVerified, emailToken, role)
        VALUES (#{userId}, #{password}, #{name}, #{phoneNumber}, #{gender}, #{address}, #{email}, #{emailVerified}, #{emailToken}, #{role})
    </insert>


    <!-- 로그인 -->
    <select id="loginUser" parameterType="String" resultType="dto.UserDTO">
        SELECT * FROM user WHERE userId = #{userId}
    </select>


    <!-- 아이디 중복 체크 -->
    <select id="checkUserId" parameterType="String" resultType="dto.UserDTO">
        SELECT * FROM user WHERE userId = #{userId}
    </select>
    
    <!-- 비밀번호 체크 -->
    <select id="checkUserPwd" parameterType="string" resultType="dto.UserDTO">
    	SELECT * FROM user WHERE userId = #{userId}
    </select>

    <!-- 이메일 인증 업데이트 -->
    <update id="updateEmailVerified" parameterType="dto.UserDTO">
        UPDATE user SET emailVerified = #{emailVerified} WHERE userId = #{userId}
    </update>

    <!-- 회원 정보 조회 -->
    <select id="getUserInfo" parameterType="String" resultType="dto.UserDTO">
        SELECT * FROM user WHERE userId = #{userId}
    </select>

    <!-- 회원 정보 수정 -->
    <update id="updateUserInfo" parameterType="dto.UserDTO">
        UPDATE user SET password = #{password}, name = #{name}, phoneNumber = #{phoneNumber},
        gender = #{gender}, address = #{address}, email = #{email}
        WHERE userId = #{userId}
    </update>

    <!-- 회원 삭제 -->
    <delete id="deleteUser" parameterType="String">
        DELETE FROM user WHERE userId = #{userId}
    </delete>

</mapper>
