<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.ImageDAO">

    <!-- 이미지 업로드 -->
    <insert id="insertImage" parameterType="dto.ImageDTO">
        INSERT INTO post_image (board_id, image_name, image_content, image_file_name, image_original_name)
        VALUES (#{boardId}, #{imageName}, #{imageContent}, #{imageFileName}, #{imageOriginalName})
    </insert>

    <!-- 게시글에 첨부된 이미지 목록 조회 -->
    <select id="getImageList" parameterType="int" resultType="dto.ImageDTO">
        SELECT * FROM post_image WHERE board_id = #{boardId}
    </select>

    <!-- 특정 이미지 조회 -->
    <select id="getImage" parameterType="int" resultType="dto.ImageDTO">
        SELECT * FROM post_image WHERE image_id = #{imageId}
    </select>

    <!-- 이미지 삭제 -->
    <delete id="deleteImage" parameterType="int">
        DELETE FROM post_image WHERE image_id = #{imageId}
    </delete>

</mapper>
